# ============================================================================
# ðŸ”’ TRELLO AI - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual API keys and credentials
# Never commit .env file to version control!

# ============================================================================
# Flask Configuration
# ============================================================================
FLASK_APP=web_app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_DEBUG=True
FLASK_PORT=5000

# ============================================================================
# Authentication
# ============================================================================
LOGIN_USERNAME=admin@justgoingviral.com
LOGIN_PASSWORD=A!Wellness2!

# ============================================================================
# OpenAI Configuration
# ============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=4000

# ============================================================================
# Trello API Configuration  
# ============================================================================
TRELLO_API_KEY=your-trello-api-key-here
TRELLO_TOKEN=your-trello-token-here
TRELLO_BOARD_ID=your-default-board-id

# ============================================================================
# Google APIs Configuration
# ============================================================================
# Google OAuth & Drive API
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/oauth/callback

# Path to Google service account JSON file (if using service account)
GOOGLE_SERVICE_ACCOUNT_FILE=path/to/your/service-account-key.json

# Google Meet & Calendar API
GOOGLE_MEET_API_KEY=your-google-meet-api-key
GOOGLE_CALENDAR_ID=primary

# ============================================================================
# WhatsApp / Green API Configuration
# ============================================================================
GREEN_API_URL=https://api.green-api.com
GREEN_API_TOKEN=your-green-api-token
GREEN_API_INSTANCE=your-instance-id
WHATSAPP_PHONE_NUMBER=your-whatsapp-number

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=sqlite:///meetingai.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trello_ai
DB_USER=your-db-username
DB_PASSWORD=your-db-password

# ============================================================================
# AI & Analysis Configuration
# ============================================================================
# Speaker Analysis Settings
ENABLE_SPEAKER_ANALYSIS=True
MIN_CONFIDENCE_SCORE=0.7

# Task Extraction Settings
ENABLE_TASK_EXTRACTION=True
TASK_KEYWORDS=action,todo,task,follow up,assign,deadline

# Sentiment Analysis
ENABLE_SENTIMENT_ANALYSIS=True

# ============================================================================
# Security & Sessions
# ============================================================================
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True
SESSION_KEY_PREFIX=trello_ai_

# CORS Settings (for API access)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================================================
# Application Settings
# ============================================================================
# Debug and Development
DEBUG_MODE=True
LOG_LEVEL=INFO
LOG_FILE=app.log

# File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=txt,pdf,docx,mp3,wav,m4a

# Meeting Processing
AUTO_PROCESS_TRANSCRIPTS=True
SAVE_PROCESSED_TRANSCRIPTS=True
TRANSCRIPT_BACKUP_DAYS=30

# ============================================================================
# Third-Party Integrations
# ============================================================================
# Slack (if using)
SLACK_BOT_TOKEN=your-slack-bot-token
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Microsoft Teams (if using)  
TEAMS_WEBHOOK_URL=your-teams-webhook-url

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com

# ============================================================================
# Production Settings (set these in production)
# ============================================================================
# Set to False in production
FLASK_DEBUG=False
FLASK_ENV=production

# Use a strong secret key in production
# SECRET_KEY=generate-a-strong-secret-key-for-production

# Use PostgreSQL or MySQL in production
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Enable SSL in production
# SSL_DISABLE=False